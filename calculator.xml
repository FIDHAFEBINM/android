<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2" >


    <EditText
        android:id="@+id/num1"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:ems="10"
        android:hint="num1"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:ems="10"
        android:hint="num2"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:text="result" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mul"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Div"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/prev"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="previous"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            app:layout_column="3"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>
